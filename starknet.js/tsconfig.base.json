{
  "include": ["./src/**/*"],
  "exclude": ["tests/**/*", "lib", "node_modules", "scripts"],
  "compilerOptions": {
    "composite": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "mocha"],
    "allowJs": true,
    "checkJs": false,
    // strict
    "strict": true,
    "noImplicitAny": false
  },
  "references": [
    {
      "path": "../common"
    }
  ]
}
